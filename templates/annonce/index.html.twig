{% extends 'base.html.twig' %}

{# {% block title %}Annonces {{ title }} {% endblock %} #}
{% block header %}{% endblock %}
{% block body %}
   <!-- Product section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    {% if annonce.image == "" %}
                        <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="..." /></div>
                    {% else %}
                        <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="{{ asset('img/' ~ annonce.image) }}" alt="..." /></div>
                    {% endif %}
                    <div class="col-md-6">
                        <div class="small mb-1">Posté le {{annonce.createdat | date("d/m/y")}}</div>
                        <h1 class="display-5 fw-bolder">{{ annonce.title }}</h1>
                        <div class="fs-5 mb-5">
                            <span>{{ annonce.prix }} €</span>
                          
                        </div>
                        <p class="lead"> {{ annonce.content }}</p>
                            <a onclick="return confirm('Supprimer annonce?')" href="{{path('annonce_delete', {id:annonce.id}) }}">
                                <img src="{{asset('img/effacer.png') }}" style="width:30px">
                            </a>
                            <a href="{{path('annonce_modif', {id:annonce.id}) }}">
                                <img src="{{asset('img/modifier.png') }}" style="width:30px">
                            </a>
                    </div>
                </div>
            </div>
        </section>
{% endblock %}
